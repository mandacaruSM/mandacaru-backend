# ================================================================
# Arquivo .env.example
# Copie para .env e configure as variáveis
# ================================================================

# Django Settings
SECRET_KEY=sua-chave-secreta-super-segura-aqui
DEBUG=True
ALLOWED_HOSTS=127.0.0.1,localhost,seu-dominio.com

# Database
DATABASE_URL=sqlite:///db.sqlite3
# Para PostgreSQL: postgresql://user:password@localhost:5432/mandacaru_db

# URLs
BASE_URL=http://127.0.0.1:8000
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://seu-frontend.com

# Telegram Bot
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_URL=

# Redis/Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
REDIS_URL=redis://localhost:6379/0

# Email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=seu-email@gmail.com
EMAIL_HOST_PASSWORD=sua-senha-app
DEFAULT_FROM_EMAIL=noreply@mandacaru.com
RELATORIO_EMAIL_DESTINATARIOS=admin@mandacaru.com,gestor@mandacaru.com

# AWS S3 (opcional)
USE_S3=False
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1

# Monitoramento (opcional)
SENTRY_DSN=

# Backup
BACKUP_ENABLED=True
BACKUP_RETENTION_DAYS=30
BACKUP_INCLUDE_MEDIA=True
BACKUP_S3_BUCKET=
BACKUP_NOTIFICATION_EMAIL=

# Configurações específicas Mandacaru
EMPRESA_NOME=Mandacaru ERP
EMPRESA_ENDERECO=Sua Empresa Ltda, Rua Principal 123
EMPRESA_TELEFONE=(11) 99999-9999
TARIFA_DESLOCAMENTO_KM=2.50
JUROS_MORA_DIARIO=0.033

# NR12
NR12_FREQUENCIA_PADRAO=DIARIO
NR12_NOTIFICAR_ATRASOS=True
NR12_TEMPO_LIMITE_CHECKLIST=120

# Produção
ENVIRONMENT=development
APP_VERSION=1.0.0